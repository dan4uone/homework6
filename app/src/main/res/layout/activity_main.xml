<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/photo_20220328_230859"
      />

    <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
        android:id="@+id/whod"

     android:text="Вход"
     android:textSize="14sp"
     android:textColor="@color/white"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     android:layout_marginTop="80dp"
     app:layout_constraintTop_toTopOf="parent"
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро Пожаловать!"
        android:id="@+id/welcome"
        app:layout_constraintBottom_toTopOf="@+id/reg"
        android:layout_marginBottom="16dp"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg"
        app:layout_constraintBottom_toTopOf="@+id/gmail"
        android:layout_marginBottom="30dp"
        android:text="Выполните вход\nили Зарегестрируйтесь"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gmail"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/password_access"
        android:hint="Введите вашу почту"
        android:textColorHint="@color/white"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textSize="16sp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:id="@+id/password_access"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:textColorHint="@color/white"

        android:hint="Введите пароль"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textSize="16sp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        app:layout_constraintBottom_toTopOf="@+id/Forget_password"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        app:cornerRadius="4dp"
        android:text="Войти"
        />
    <TextView
        android:id="@+id/Forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/click_me"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/Forget_password"
        app:layout_constraintBottom_toBottomOf="@+id/Forget_password"
        android:text="нажми сюда"
        android:textColor="@color/orange"
        />






</androidx.constraintlayout.widget.ConstraintLayout>